<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.chemicksoft.epos"
        version   = "1.0.2"
        xmlns:android = "http://schemas.android.com/apk/res/android">

    <name>Chemick E-Pos</name>

    <description>
        Aplikasi E-Pos Berbasis Offline
    </description>

    <author href="https://crazycoding.info" email="chemick86@gmail.com">
        ChemickSoft
    </author>

    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-maxSdkVersion" value="29" />
        <preference name="android-targetSdkVersion" value="28" />
        <preference name="android-installLocation" value="auto" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="Orientation" value="portrait" />
    </platform>

    <icon src="img/logo.png" />
    <plugin name="cordova-plugin-whitelist" version="1.3.4" />
    <plugin name="cordova-plugin-datecs-printer" version="0.10.0" />
    <plugin name="cordova-plugin-file" version="4.3.3" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
</widget>
